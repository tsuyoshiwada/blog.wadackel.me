{
  "private": true,
  "scripts": {
    "start": "npm-run-all clean watch",
    "clean": "rimraf 'public' 'static/**/*.+(js|css)'",
    "build": "npm-run-all clean build:assets build:hugo",
    "build:assets": "npm-run-all -p build:js build:css",
    "build:js": "NODE_ENV=production webpack",
    "build:css": "postcss ./src/css/style.css -d ./static/css/",
    "build:hugo": "hugo",
    "postbuild:css": "rimraf manifest.json",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "webpack --watch",
    "watch:css": "yarn build:css --watch",
    "watch:hugo": "hugo server --renderToDisk --port=8080 -D -w",
    "watch:open": "wait-on http://localhost:8080 && opener http://localhost:8080",
    "lint": "npm-run-all lint:js lint:css",
    "lint:js": "eslint '*.js' 'src/js/**/*.js'",
    "lint:css": "stylelint 'src/css/**/*.css'",
    "format": "npm-run-all format:prettier -p format:js format:css",
    "format:prettier": "prettier --config prettier.config.js --write '**/*.+(js|css|md|json)'",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.7",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^3.0.0",
    "npm-run-all": "^4.1.2",
    "opener": "^1.5.1",
    "postcss-cli": "^6.0.1",
    "postcss-custom-media": "^7.0.7",
    "postcss-easy-import": "^3.0.0",
    "postcss-hash": "^1.0.2",
    "postcss-nesting": "^7.0.0",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "stylelint": "^9.1.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-prettier": "^1.0.5",
    "wait-on": "^3.2.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.1.2",
    "webpack-manifest-plugin": "^2.0.4",
    "workbox-sw": "^3.6.3",
    "workbox-webpack-plugin": "^3.6.3"
  },
  "dependencies": {
    "clipboard": "^2.0.0",
    "lime-grid.css": "^0.1.0",
    "normalize.css": "^8.0.0",
    "prismjs": "^1.12.2",
    "sweet-scroll": "^3.0.0"
  }
}

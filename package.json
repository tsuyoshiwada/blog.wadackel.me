{
  "private": true,
  "scripts": {
    "start": "npm-run-all clean watch",
    "clean": "rm -rf ./public",
    "build": "npm-run-all clean -p build:*",
    "build:js": "NODE_ENV=production webpack",
    "build:css": "postcss ./src/css/style.css -d ./static/css/",
    "build:hugo": "hugo",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "webpack --watch",
    "watch:css": "yarn build:css --watch",
    "watch:hugo": "hugo server --renderToDisk --port=8080 -D -w",
    "test": "npm-run-all lint",
    "lint": "npm-run-all lint:js lint:css",
    "lint:js": "eslint \"src/js/**/*.js\"",
    "lint:css": "stylelint \"src/css/**/*.css\""
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.24.1",
    "cssnano": "^3.10.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-easy-import": "^3.0.0",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "workbox-sw": "^2.1.3",
    "workbox-webpack-plugin": "^2.1.3"
  },
  "dependencies": {
    "clipboard": "^2.0.0",
    "lime-grid.css": "^0.1.0",
    "normalize.css": "^8.0.0",
    "prismjs": "^1.12.2",
    "sweet-scroll": "^3.0.0"
  }
}
